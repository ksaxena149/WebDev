<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">

        <% newTask.forEach(item => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input name="checkbox" type="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                    <p>
                        <%= item.content %>
                    </p>
                </div>
                <input type="hidden" name="category" value="<%= listTitle %>">
            </form>
        <% }) %>
            <form class="item" action="/" method="post">
                <input type="text" name="task" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>
    </div>
<%- include("footer") -%>